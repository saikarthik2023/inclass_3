pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/saikarthik2023/inclass_3.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy to GCS') {
            steps {
                sh 'gsutil cp target/*.jar gs://inclass_3_bucket/'
            }
        }
    }
}
